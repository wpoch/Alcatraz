@{
    ViewBag.Title = "Alcatraz - Don't let those logs goes away";
}

@section head {
    <script src="http://localhost:8081/signalr/hubs" type="text/javascript"></script>    
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <p>
                The new way on logs visualization.
            </p>
        </div>
    </section>
}
<h3>
    Logs
</h3>
<ul id="messages">
</ul>
<script type="text/javascript">
    $(function () {
        var logHub = $.connection.logHub;

        logHub.received = function (data) {
            $("#messages").prepend($("<li/>").html(data.Message));
        };

        $.connection.hub.start({ transport: 'negotiate' });
    });
</script>
